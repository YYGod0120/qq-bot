{
  
  "compilerOptions": {
    /* Base Options: */
    "esModuleInterop": true,
    "skipLibCheck": true,
    "target": "es2022",
    "verbatimModuleSyntax": true,
    "allowJs": true,
    "resolveJsonModule": true,
    "moduleDetection": "force",
    "outDir": "dist",
    /* Strictness */
    "strict": true,
    "noUncheckedIndexedAccess": true,
    /* If transpiling with TypeScript: */
    "module": "NodeNext",
    "moduleResolution": "NodeNext", // 使用 Node.js 模块解析策略
    "sourceMap": true,
    /* If your code doesn't run in the DOM: */
    "lib": ["es2022"],
    /* If you're building for a library: */
    "declaration": true,
    /* If you're building for a library in a monorepo: */
    "composite": true,
    "declarationMap": true
  },

  "include": [
    "./package/**/*.ts",
    "./*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}